{
	"extends": "eslint:recommended",
	"env": {
		"es6": true,
		"browser": true
	},
	"ecmaFeatures": {
		"jsx": true,
		"modules": true
	},
	"rules": {
		"array-bracket-spacing": [ 2, "never" ],
		"arrow-parens": 2,
		"arrow-spacing": 2,
		"brace-style": 2,
		"camelcase": [
			2,
			{ "properties": "never" }
		],
		"comma-dangle": [ 2, "always-multiline" ],
		"comma-spacing": 2,
		"constructor-super": 2,
		"curly": 2,
		"default-case": 2,
		"dot-location": [ 2, "property" ],
		"dot-notation": 2,
		"eol-last": 2,
		"eqeqeq": 2,
		"guard-for-in": 2,
		"indent": [ 2, "tab" ],
		"jsx-quotes": [ 2, "prefer-double" ],
		"keyword-spacing": 2,
		"max-len": [ 2, 80, 4 ],
		"new-cap": 2,
		"new-parens": 2,
		"no-alert": 1,
		"no-caller": 2,
		"no-cond-assign": [ 2, "always" ],
		"no-console": 1,
		"no-const-assign": 2,
		"no-debugger": 1,
		"no-dupe-args": 2,
		"no-dupe-class-members": 2,
		"no-empty": 1,
		"no-empty-pattern": 2,
		"no-eval": 2,
		"no-extend-native": 2,
		"no-extra-bind": 2,
		"no-floating-decimal": 2,
		"no-implicit-coercion": 2,
		"no-implied-eval": 2,
		"no-inner-declarations": 2,
		"no-invalid-this": 2,
		"no-iterator": 2,
		"no-labels": 2,
		"no-lone-blocks": 2,
		"no-loop-func": 2,
		"no-multi-spaces": 2,
		"no-multi-str": 2,
		"no-native-reassign": 2,
		"no-new": 2,
		"no-new-func": 2,
		"no-proto": 2,
		"no-shadow-restricted-names": 2,
		"no-this-before-super": 2,
		"no-trailing-spaces": 2,
		"no-unused-vars": [
			2,
			{
				"argsIgnorePattern": "^_",
				"varsIgnorePattern": "^_",
				"ignoreRestSiblings": true
			}
		],
		"no-use-before-define": 2,
		"no-var": "off",
		"no-with": 2,
		"prefer-template": 1,
		"quotes": [ 2, "single" ],
		"radix": 2,
		"semi": 2,
		"space-before-blocks": 2,
		"space-before-function-paren": [ 2, "never" ],
		"space-in-parens": 2,
		"no-undef" :  "off"
	}
}